@article{10.1145/3487330,
author = {Deng, Libing and Xie, Guoqi and Liu, Hong and Han, Yunbo and Li, Renfa and Li, Keqin},
title = {A Survey of Real-Time Ethernet Modeling and Design Methodologies: From AVB to TSN},
year = {2022},
issue_date = {February 2023},
