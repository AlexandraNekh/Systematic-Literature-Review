@article{10.1145/3579618,
author = {Salehzadeh Niksirat, Kavous and Korka, Diana and Harkous, Hamza and Huguenin, K\'{e}vin and Cherubini, Mauro},
title = {On the Potential of Mediation Chatbots for Mitigating Multiparty Privacy Conflicts - A Wizard-of-Oz Study},
year = {2023},
