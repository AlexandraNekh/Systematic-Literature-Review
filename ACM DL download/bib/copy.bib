articleno = {6},
numpages = {12},
keywords = {trust and regulation, trustworthy autonomous systems, regulation, autonomous systems, Regulation of autonomy, Law 3.0},
location = {<conf-loc>, <city>Edinburgh</city>, <country>United Kingdom</country>, </conf-loc>},
