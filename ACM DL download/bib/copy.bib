@inproceedings{10.1145/3406499.3415072,
author = {Flathmann, Christopher and Schelble, Beau and Tubre, Brock and McNeese, Nathan and Rodeghero, Paige},
title = {Invoking Principles of Groupware to Develop and Evaluate Present and Future Human-Agent Teams},
