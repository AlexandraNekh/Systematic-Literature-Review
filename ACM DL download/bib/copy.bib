articleno = {251},
numpages = {17},
keywords = {collaboration, ethical AI, Responsible AI, fairness, explainability, XAI, FAT, transparency, value levers, co-production, accountability, RAI},
location = {<conf-loc>, <city>Hamburg</city>, <country>Germany</country>, </conf-loc>},
