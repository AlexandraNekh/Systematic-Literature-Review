@article{10.1145/3449207,
author = {Iqbal, Modassir and Shilton, Katie and Sayed, Mahmoud F. and Oard, Douglas and Rivera, Jonah Lynn and Cox, William},
title = {Search with Discretion: Value Sensitive Design of Training Data for Information Retrieval},
year = {2021},
issue_date = {April 2021},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
