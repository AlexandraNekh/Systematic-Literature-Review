@inproceedings{10.1145/3334480.3381061,
author = {Steinbock, Daniel and Rao, Sridhar},
title = {User Experience Design Patterns for Pseudo-Sentient Agents},
year = {2020},
isbn = {9781450368193},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3334480.3381061},
doi = {10.1145/3334480.3381061},
