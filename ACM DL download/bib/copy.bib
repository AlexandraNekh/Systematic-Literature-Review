@inproceedings{10.1145/3544549.3577057,
author = {Cunningham, Jay L.},
title = {Collaboratively Mitigating Racial Disparities in Automated Speech Recognition and Language Technologies with African American English Speakers: Community-Collaborative and Equity-Centered Approaches Toward Designing Inclusive Natural Language Systems},
year = {2023},
isbn = {9781450394222},
