keywords = {falls, wearable interfaces, usability, older adults},
location = {<conf-loc>, <city>Montreal QC</city>, <country>Canada</country>, </conf-loc>},
series = {CHI '18}
}

@article{10.1145/3343871,
author = {Poulovassilis, Alexandra and Larsson, Nick and Candlin, Fiona and Larkin, Jamie and Ballatore, Andrea},
