@article{10.1145/3274433,
author = {Soni, Devin and Singh, Vivek K.},
title = {See No Evil, Hear No Evil: Audio-Visual-Textual Cyberbullying Detection},
year = {2018},
issue_date = {November 2018},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
