@inproceedings{10.5555/3522802.3522842,
author = {Matkovi\'{c}, Kre\v{s}imir and Splechtna, Rainer and Gra\v{c}anin, Denis and Todorovi\'{c}, Goran and Goja, Stanislav and Bedi\'{c}, Boris and Hauser, Helwig},
title = {Getting Insight into Noise, Vibration, and Harshness Simulation Data},
year = {2022},
