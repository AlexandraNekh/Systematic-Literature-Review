@inproceedings{10.1145/3593013.3594093,
author = {Nigatu, Hellina Hailu and Pickoff-White, Lisa and Canny, John and Chasins, Sarah},
title = {Co-Designing for Transparency: Lessons from Building a Document Organization Tool in the Criminal Justice Domain},
year = {2023},
