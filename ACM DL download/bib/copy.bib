}

@inproceedings{10.1145/3404983.3405510,
author = {Burtscher, Sabrina and Spiel, Katta},
title = {"But Where Would I Even Start?": Developing (Gender) Sensitivity in HCI Research and Practice},
year = {2020},
isbn = {9781450375405},
