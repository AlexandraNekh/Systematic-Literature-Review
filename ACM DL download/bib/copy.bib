pages = {219–230},
numpages = {12},
keywords = {generative toolkit, migrants, chatbot, probes, conversation design, avatar, personality, co-design, social integration},
location = {<conf-loc>, <city>Eindhoven</city>, <country>Netherlands</country>, </conf-loc>},
series = {DIS '20}
}

