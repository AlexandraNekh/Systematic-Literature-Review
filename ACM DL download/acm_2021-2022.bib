doi = {10.1145/3560071.3560088},
abstract = {Despite the growing number of diagnosis applications available, real interoperability among heterogeneous solutions and other applications in the e-health domain is still a challenging issue. This paper addresses the integration of data generated by diagnosis applications into general e-health platforms through the use of standards such as HL7 FHIR. Panoramix is a battery of serious games for the identification of senior adults who are in the process of developing a cognitive impairment. We discuss the technical details of the integration of Panoramix data using FHIR in the framework of project Gatekeeper, designed to serve as the backbone for e-health apps and devices development and integration in Europe.},
booktitle = {Proceedings of the 2022 International Conference on Intelligent Medicine and Health},
pages = {64–69},
