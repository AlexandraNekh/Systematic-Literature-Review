@inproceedings{10.1145/3531146.3533091,
author = {Ha, You Jeen},
title = {South Korean Public Value Coproduction Towards‘AI for Humanity’: A Synergy of Sociocultural Norms and Multistakeholder Deliberation in Bridging the Design and Implementation of National AI Ethics Guidelines},
year = {2022},
