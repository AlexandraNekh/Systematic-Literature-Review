@article{10.1145/3534620,
author = {Yan, Zihan and Zhou, Jiayi and Wu, Yufei and Liu, Guanhong and Luo, Danli and Zhou, Zihong and Mi, Haipeng and Sun, Lingyun and Chen, Xiang 'Anthony' and Tao, Ye and Zhang, Yang and Wang, Guanyun},
title = {Shoes++: A Smart Detachable Sole for Social Foot-to-Foot Interaction},
