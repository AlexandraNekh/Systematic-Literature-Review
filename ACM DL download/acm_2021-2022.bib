@article{10.1145/3555158,
author = {Liaqat, Amna and Axtell, Benett and Munteanu, Cosmin},
title = {"With a Hint She Will Remember": Collaborative Storytelling and Culture Sharing between Immigrant Grandparents and Grandchildren Via Magic Thing Designs},
year = {2022},
