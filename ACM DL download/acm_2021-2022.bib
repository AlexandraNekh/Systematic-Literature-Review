month = {nov},
articleno = {522},
numpages = {28},
keywords = {assets-based, participatory research, student mothers, auto-ethnography, foreign student parenting, affective writing}
}

@inproceedings{10.1145/3472538.3472626,
author = {Paranthaman, Pratheep Kumar and Sarkar, Anurag and Cooper, Seth},
