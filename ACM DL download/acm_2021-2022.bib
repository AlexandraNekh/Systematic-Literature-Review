address = {New York, NY, USA},
url = {https://doi.org/10.1145/3459990.3460514},
doi = {10.1145/3459990.3460514},
abstract = {In this workshop, we invite researchers and practitioners as participants in co-designing the protocol for the world’s largest Distributed Participatory Design (DPD) project with children. Participatory Design – whose inclusive benefits are broadly recognised in design – can be very challenging, especially when involving children. The current COVID-19 pandemic has given rise to further barriers to PD with such groups. Recent key barriers include social distancing and government-imposed social restrictions due to the additional health risks to vulnerable children and their families. This disrupts traditional in-person PD (which involves close socio-emotional and often physical collaboration between participants and researchers). However, alongside such barriers, we have identified opportunities for new and augmented approaches to PD across distributed geographies, backgrounds, ages and abilities. We invite the CCI community to examine Distributed Participatory Design (DPD) as a solution for overcoming these new barriers, during and after COVID-19. Together, we offer new ways to think about DPD, and unpick some of its ambiguities. This workshop builds on work conducted in a similar workshop in IDC 2020, and this year will focus on the planning and design of the protocol for the world’s largest DPD project with children.},
booktitle = {Proceedings of the 20th Annual ACM Interaction Design and Children Conference},
pages = {687–691},
numpages = {5},
keywords = {online, children, participatory design, distributed},
location = {Athens, Greece},
series = {IDC '21}
}

@inproceedings{10.1145/3524458.3547119,
author = {Buddemeyer, Amanda and Nwogu, Jennifer and Solyst, Jaemarie and Walker, Erin and Nkrumah, Tara and Ogan, Amy and Hatley, Leshell and Stewart, Angela},
title = {Unwritten Magic: Participatory Design of AI Dialogue to Empower Marginalized Voices},
year = {2022},
isbn = {9781450392846},
