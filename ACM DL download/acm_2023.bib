@inproceedings{10.1145/3563657.3596057,
author = {To, Alexandra and Smith, Angela D. R. and Showkat, Dilruba and Adjagbodjou, Adinawa and Harrington, Christina},
title = {Flourishing in the Everyday: Moving Beyond Damage-Centered Design in HCI for BIPOC Communities},
