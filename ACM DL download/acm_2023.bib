@inproceedings{10.1145/3568162.3576973,
author = {Winkle, Katie and McMillan, Donald and Arnelid, Maria and Harrison, Katherine and Balaam, Madeline and Johnson, Ericka and Leite, Iolanda},
title = {Feminist Human-Robot Interaction: Disentangling Power, Principles and Practice for Better, More Ethical HRI},
year = {2023},
isbn = {9781450399647},
