keywords = {Human-Plant Interaction., Research through Design, Self-Tracking, Notification, Personal Data, Shape-Changing Interface, Ambient Information System},
location = {Hamburg, Germany},
series = {CHI '23}
}

@inproceedings{10.1145/3544549.3574193,
author = {Houben, Maarten and Lee, Minha and Foley, Sarah and Morrissey, Kellie and Brankaert, Rens},
