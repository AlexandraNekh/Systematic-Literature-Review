@inproceedings{10.1145/3584931.3611295,
author = {Hansson, Karin and Bardzell, Shaowen and Bhandari, Aparajita and Boulicault, Marion and Doyle, Dylan Thomas and Erete, Sheena and Cerratto Pargman, Teresa and Lazem, Shaimaa and Muller, Michael and Normark, Maria and Petterson, Adrian and Ros\'{e}n, Anton Poikolainen and Taylor, Alex S. and Thomas, Jakita O. and Watson, Julia},
