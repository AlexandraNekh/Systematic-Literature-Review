@inproceedings{10.1145/3603269.3604859,
author = {Wei, Chengkun and Li, Xing and Yang, Ye and Jiang, Xiaochong and Xu, Tianyu and Yang, Bowen and Wu, Taotao and Xu, Chao and Lv, Yilong and Gao, Haifeng and Zhang, Zhentao and Chen, Zikang and Wang, Zeke and Zhang, Zihui and Zhu, Shunmin and Chen, Wenzhi},
title = {Achelous: Enabling Programmability, Elasticity, and Reliability in Hyperscale Cloud Networks},
