@inproceedings{10.1145/3583961.3583983,
author = {Bardou, Maxime and Letondal, Catherine and Causse, Micka\"{e}l and Imbert, Jean-Paul and Poirier, Mathieu},
title = {Collaborative Design to Support Mutual Awareness in Single-Pilot Operation and Remote Collaboration},
year = {2023},
isbn = {9781450398244},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
