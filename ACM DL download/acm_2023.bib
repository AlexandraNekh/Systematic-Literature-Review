booktitle = {Companion Publication of the 2023 Conference on Computer Supported Cooperative Work and Social Computing},
pages = {532–536},
numpages = {5},
keywords = {Responsible AI, AI Ecosystem, Community-driven AI},
location = {Minneapolis, MN, USA},
series = {CSCW '23 Companion}
}

@inproceedings{10.1145/3585088.3589927,
author = {Ozcan, Beste and Sperati, Valerio and Giocondo, Flora and Tyska Carvalho, Jonata and Baldassarre, Gianluca},
