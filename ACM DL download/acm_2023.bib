keywords = {tool, Inclusive Design, toolkits, Participatory Design, Universal Design, Value Sensitive Design, activism, cards, design, ethics, equity, justice},
location = {Hamburg, Germany},
series = {CHI '23}
}

@inproceedings{10.1145/3544548.3581348,
