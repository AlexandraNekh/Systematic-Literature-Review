articleno = {55},
numpages = {6},
keywords = {augmented reality, remote user, mobile robotic telepresence, hybrid interaction, human robot interaction},
location = {Edinburgh, United Kingdom},
series = {TAS '23}
}

@article{10.1145/3579621,
author = {Wong, Richmond Y. and Madaio, Michael A. and Merrill, Nick},
title = {Seeing Like a Toolkit: How Toolkits Envision the Work of AI Ethics},
year = {2023},
