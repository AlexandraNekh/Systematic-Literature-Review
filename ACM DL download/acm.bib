booktitle = {Proceedings of the 10th International Conference on Communities &amp; Technologies - Wicked Problems in the Age of Tech},
pages = {51–60},
numpages = {10},
keywords = {city strategy, urban data, interview, city officials, Cities, artificial intelligence, urban computing},
location = {Seattle, WA, USA},
series = {C&amp;T '21}
}

@inproceedings{10.1145/3210604.3210621,
author = {Tuhkala, Ari and K\"{a}rkk\"{a}inen, Tommi and Nieminen, Paavo},
title = {Semi-Automatic Literature Mapping of Participatory Design Studies 2006--2016},
