abstract = {In this study I explain the significance of incorporating indigenous methodologies into technical and professional communication (TPC) practices and UX research. Drawing upon insights from Bagele, Cusicanqui, Wilson, Tuck and Yang, Driskill, Smith, and Bowker, I present arguments that challenge TPC and UX researchers to move beyond decolonial approaches lacking actionable implementation strategies. I also identify localization and translation practices as areas where indigenous epistemologies are often undermined. Against this backdrop, by employing indigenous-centered approaches, such as the integrative approach, third space, Afrikology and predominantly indigenous methodologies, TPC and UX researchers can address cultural nuances and design needs, ensuring respectful and effective communication. Furthermore, I propose the focused life-story interview method rooted in indigenous research paradigm as a means of exploring sensitive topics and fostering meaningful connections with participants. I conclude by emphasizing the need for future research to apply indigenous methodologies to ethically design artificial intelligence (AI) systems.},
booktitle = {Proceedings of the 41st ACM International Conference on Design of Communication},
pages = {103–109},
numpages = {7},
keywords = {Decolonial theory, Intercultural communication design, UX research and translation, Technical and Professional Communication (TPC), Indigenous methodologies},
location = {Orlando, FL, USA},
series = {SIGDOC '23}
}

@inproceedings{10.1145/3563657.3596110,
