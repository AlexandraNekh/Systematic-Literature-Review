@inproceedings{10.1109/ICSE48619.2023.00132,
author = {Gamboa, Catarina and Canelas, Paulo and Timperley, Christopher and Fonseca, Alcides},
title = {Usability-Oriented Design of Liquid Types for Java},
year = {2023},
