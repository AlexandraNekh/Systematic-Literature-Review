@inproceedings{10.1145/3532106.3533509,
author = {Park, Hyanghee and Forlizzi, Jodi and Lee, Joonhwan},
title = {Voices of Sexual Assault Survivors: Understanding Survivors’ Experiences of Interactional Breakdowns and Design Ideas for Solutions},
