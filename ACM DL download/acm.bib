@inproceedings{10.1145/2896338.2896352,
author = {Lindgren, Helena and Baskar, Jayalakshmi and Guerrero, Esteban and Nieves, Juan Carlos and Nilsson, Ingeborg and Yan, Chunli},
title = {Computer-Supported Assessment for Tailoring Assistive Technology},
year = {2016},
isbn = {9781450342247},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
