articleno = {22},
numpages = {10},
keywords = {co-development, ontology development methodology, co-design},
location = {Brisband, Queensland, Australia},
series = {ACSW '18}
}

@inproceedings{10.1145/3284432.3287179,
author = {Li, Sha and Ursu, Marian and Williams, Doug and Kegel, Ian},
