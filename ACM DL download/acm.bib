articleno = {251},
numpages = {17},
keywords = {XAI, FAT, accountability, explainability, value levers, Responsible AI, ethical AI, fairness, co-production, transparency, RAI, collaboration},
location = {Hamburg, Germany},
series = {CHI '23}
}

