@inproceedings{10.1145/1189215.1189180,
author = {Holz, Hilary J. and Applin, Anne and Haberman, Bruria and Joyce, Donald and Purchase, Helen and Reed, Catherine},
title = {Research Methods in Computing: What Are They, and How Should We Teach Them?},
year = {2006},
isbn = {1595936033},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
