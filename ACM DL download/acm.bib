pages = {118–125},
numpages = {8},
keywords = {special needs, minority populations, design, PD, participatory design, inclusion, diversity, co-design, children, disability},
location = {London, United Kingdom},
series = {IDC '20}
}

@inproceedings{10.1145/3543174.3546848,
