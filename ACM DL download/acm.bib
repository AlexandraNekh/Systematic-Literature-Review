articleno = {89},
numpages = {16},
keywords = {participatory design, design directions, diversity, interaction design},
location = {Hamburg, Germany},
series = {CHI '23}
}

@inproceedings{10.1145/3210586.3210590,
author = {Teli, Maurizio and Lyle, Peter and Sciannamblo, Mariacristina},
title = {Institutioning the Common: The Case of Commonfare},
year = {2018},
isbn = {9781450363716},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3210586.3210590},
doi = {10.1145/3210586.3210590},
