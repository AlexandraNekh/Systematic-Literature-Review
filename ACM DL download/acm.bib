articleno = {8},
numpages = {5},
keywords = {ACM AI, PD, machine learning, ML, design},
location = {Hasselt and Genk, Belgium},
series = {PDC '18}
}

@inproceedings{10.1145/1011870.1011894,
author = {Tax\'{e}n, Gustav},
title = {Introducing Participatory Design in Museums},
