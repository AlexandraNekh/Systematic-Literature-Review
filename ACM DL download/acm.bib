@inproceedings{10.1145/3218585.3218688,
author = {Hadjileontiadou, Sofia J. and Klothou, Anna and Basiloudi, Vasiliki and Iakovakis, Dimitrios and Charisis, Vasileios and Hadjidimitriou, Stelios and Dias, Sofia B. and Diniz, Jos\'{e} A. and Hadjileontiadis, Leontios J. and Sakonidis, Charalampos},
title = {Using Art and Technology to Support Geometry Learning for All: A Conceptual Instructional Design},
