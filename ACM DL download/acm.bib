pages = {66–70},
numpages = {5},
keywords = {HCI, mobile assistants, age-induced cognitive disabilities, ubiquitous computing},
location = {Alc\'{a}cer do Sal, Portugal},
series = {WUAUC'01}
}

@article{10.1145/3622784,
