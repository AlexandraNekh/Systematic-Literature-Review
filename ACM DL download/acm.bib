booktitle = {Proceedings of the Eighth Conference on Participatory Design: Artful Integration: Interweaving Media, Materials and Practices - Volume 1},
pages = {121–131},
numpages = {11},
keywords = {collaborative design, stakeholders, design games, empowerment},
